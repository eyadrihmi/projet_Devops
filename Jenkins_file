stages{

    stage('GIT') { 
        steps{
        git url:'https://github.com/malekbenabdellatif/projet_Devops.git', branch : 'wassim-prod'
             }
    }
    stage('MAVEN clean'){
         steps{
           echo 'Cleaning Project '
           echo "Maven Version "
           bat "mvn -Dmaven.test.failure.ignore=true clean package"
              }
      }
    stage('MAVEN COMPILE'){
            steps{
                script{
                        bat 'mvn clean install -DskipTests'
                }
            }
        }
    stage('Create database') {
            steps {
                bat "mysql -u root -p -e 'CREATE DATABASE Achat;'"
                bat "mysql -u root -p Achat < V1__Create_tables.sql"
            }
        }
    stage("Runing Tests with Mockito & JUNIT TEST") {
               steps{
                   bat 'mvn test'
                }
        }
