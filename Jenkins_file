pipeline {
    agent any

    
 stages{

    stage('GIT') { 
        steps{
        git url:'https://github.com/eyadrihmi/projet_Devops.git'
             }
    }
   
    stage('Create database') {
            steps {
                bat "mysql -u root -p -e 'CREATE DATABASE Achat;'"
                bat "mysql -u root -p Achat < V1__Create_tables.sql"
            }
        }
    stage("Runing Tests with Mockito & JUNIT TEST") {
               steps{
                   bat 'mvn test'
                }
        }
  }}
